<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Bai02">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="260dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/txtRed"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="#a52a2a"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"
            android:layout_marginRight="93dp"
            android:text="Red" />

        <TextView
            android:id="@+id/txtOrange"
            android:layout_width="72dp"
            android:layout_height="52dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="93dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:background="#ffa500"
            android:text="Orange" />

        <TextView
            android:id="@+id/txtYellow"
            android:layout_width="72dp"
            android:layout_height="52dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="#ffff00"
            android:gravity="center"
            android:text="Yellow"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="279dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="261dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/txtGreen"
            android:layout_width="72dp"
            android:layout_height="52dp"
            android:background="#00ff00"
            android:gravity="center"
            android:layout_marginLeft="93dp"
            android:text="Green" />

        <TextView
            android:id="@+id/txtBlue"
            android:layout_width="72dp"
            android:layout_height="52dp"
            android:background="#0000ff"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="Blue" />

        <TextView
            android:id="@+id/txtIndigo"
            android:layout_width="72dp"
            android:layout_height="52dp"
            android:background="#483d8b"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="Indigo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="87dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="643dp">

        <TextView
            android:id="@+id/txtViolet"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="#9400d3"
            android:gravity="center"
            android:text="Violet"
            android:textColor="@color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>