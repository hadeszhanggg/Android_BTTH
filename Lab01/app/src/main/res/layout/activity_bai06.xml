<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity_Bai06">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00ffff"
            android:textSize="10pt"
            android:text="Chuyển năm dương sang năm âm lịch!" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="687dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6495ed"
            android:textSize="10pt"
            android:text="Nhập năm dương lịch:" />

        <EditText
            android:id="@+id/inputLichDuong"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:ems="30"
            android:inputType="text"
            android:hint="example:  2001"/>

        <Button
            android:id="@+id/btnTinhLich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/cardview_dark_background"

            android:text="Chuyển" />

        <TextView
            android:id="@+id/txtLichAm"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:textSize="20pt"
            android:text="Năm âm lịch" />
    </LinearLayout>

</LinearLayout>